<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/baojia_circle_container_paddingleft"
    android:paddingRight="@dimen/baojia_circle_container_paddingright">

    <ImageView
        android:id="@+id/iv_portrait_circle"
        android:layout_width="@dimen/baojia_circle_portrait_size"
        android:layout_height="@dimen/baojia_circle_portrait_size"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        android:src="@drawable/de_default_portrait"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="@dimen/baojia_circle_container_paddingleft">

        <TextView
            android:id="@+id/tv_username_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/tv_content_circle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            android:layout_marginTop="10dp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/lv_photo_circle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_time_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/tv_delete_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/baojia_circle_delete"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>